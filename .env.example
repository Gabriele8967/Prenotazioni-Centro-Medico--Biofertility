# ===========================================
# RAILWAY PRODUCTION ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in your actual values

# ===========================================
# DATABASE CONFIGURATION (Railway auto-configures)
# ===========================================
DATABASE_URL=mysql://username:password@host:port/database
# Or use individual variables:
# DB_HOST=localhost
# DB_USER=root  
# DB_PASSWORD=password
# DB_NAME=prenotazioni
# DB_PORT=3306

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=production
PORT=3000

# ===========================================
# SECURITY & RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# EMAIL CONFIGURATION (Gmail)
# ===========================================
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password
COMPANY_EMAIL=your-company@gmail.com
COMPANY_PHONE=+39 06 123 4567
COMPANY_ADDRESS=Via Example 123, Rome, Italy

# ===========================================
# GOOGLE CALENDAR INTEGRATION
# ===========================================
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-client-secret
GOOGLE_REDIRECT_URI=https://your-app.up.railway.app/auth/callback
GOOGLE_REFRESH_TOKEN=1//04your-refresh-token
GOOGLE_CALENDAR_ID=your-calendar@gmail.com

# ===========================================
# WEBHOOK CONFIGURATION (Optional)
# ===========================================
WEBHOOK_URL=https://your-app.up.railway.app/api/calendar/webhook
WEBHOOK_SECRET=your-secure-webhook-token

# ===========================================
# PAYMENT & BUSINESS
# ===========================================
PAYMENT_URL=https://your-payment-system.com/payment
FRONTEND_URL=https://your-app.up.railway.app

# ===========================================
# CORS ORIGINS (for production)
# ===========================================
CORS_ORIGINS=https://your-app.up.railway.app,https://your-domain.com